{
    "name": "slm/mail",
    "description": "Integration of various email service providers in the Zend Framework Zend\\Mail",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "zf2",
        "email",
        "elastic email",
        "elasticemail",
        "mailgun",
        "mandrill",
        "postage",
        "postmark",
        "send grid",
        "sendgrid",
        "transactional email"
    ],
    "homepage": "https://github.com/juriansluiman/SlmMail",
    "authors": [
        {
            "name": "Jurian Sluiman",
            "email": "jurian@juriansluiman.nl",
            "homepage": "http://juriansluiman.nl"
        },
        {
            "name": "MichaÃ«l Gallego",
            "email": "mic.gallego@gmail.com",
            "homepage": "http://www.michaelgallego.fr"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-mail": "^2.6",
        "zendframework/zend-http": "^2.5",
        "zendframework/zend-mime": "^2.6"
    },
    "require-dev": {
        "aws/aws-sdk-php-zf2": "~2.0",
        "zendframework/zend-servicemanager": "^2.7 || ^3.1"
    },
    "suggest": {
        "aws/aws-sdk-php-zf2": "If you need to use Amazon SES"
